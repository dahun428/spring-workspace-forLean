	<select id="getUserById" parameterType="string" resultType="User">
		 select * from spring_users;
		    select 
		        user_id             as id,
		        user_name           as name,
		        user_password       as password,
		        user_email          as email,
		        user_create_date    as createdDate,
		        user_tel            as tel,
		        user_birth          as birth
		    from spring_users
		    where user_id = #{value}
	</select>
