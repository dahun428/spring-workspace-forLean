<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper>

<insert id="insertComment" parameterType="kr.co.jhta.vo.Comment">
	insert into spring_blogs (blog_no, blog_title, blog_writer, blog_content,
				 blog_likes, blog_comment_counts, blog_create_date)
	values (spring_blog_seq.nextval,#{title},#{writer},#{content},#{likes},#{commentCount}, sysdate);
</insert>
<select id="getAllBlogs" resultType="kr.co.jhta.vo.Blog">
	select blog_no  as no,
			blog_title as title,
			blog_content as content,
			blog_likes as likes,
			blog_comment_counts as commentCount,
			blog_create_date as createdDate
	from spring_blogs 
</select>
<select id="getBlogByNo" parameterType="int" resultType="kr.co.jhta.dto.BlogDto"></select>
	select blog_no, blog_title, blog_writer, 
			blog_content, blog_likes, blog_comment_counts, 
			blog_create_date 
	from spring_blogs a, spring_users b 
	where a.blog_writer = b.user_id 
	and blog_no = #{value}

</mapper>